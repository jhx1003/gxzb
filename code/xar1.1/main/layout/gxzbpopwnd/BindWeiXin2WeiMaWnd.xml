<xlue>
	<objtreetemplate id="GXZB.BindWeiXin2WeiMaWndTree" class="ObjectTreeTemplate">
		<attr>
			<left>0</left>
			<top>0</top>
			<width>419</width>
			<height>376</height>
		</attr>
		<obj id="root" class="TextureObject">
			<attr>
				<left>0</left>
				<top>0</top>
				<width>419</width>
				<height>376</height>
				<texture>bindweixin-bkg2</texture>
			</attr>	
			<children>
				<obj id="BindWeiXin2WeiMaWnd.Caption" class="CaptionObject">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>father.height</height>
					</attr>
					<children>
						<obj id = "BindWeiXin2WeiMaWnd.Caption.Title" class = "TextObject">
							<attr>
								<left>5</left>
								<top>5</top>
								<width>150</width>
								<height>25</height>
								<valign>center</valign>
								<halign>left</halign>
								<textcolor>system.black</textcolor>
								<font>font.text22</font>
								<text>绑定微信</text>
							</attr>
						</obj>
						<obj id="BindWeiXin2WeiMaWnd.Caption.CloseBtn" class="TipAddin.Button">
							<attr>
								<left>father.width-25</left>
								<top>9</top>
								<width>12</width>
								<height>12</height>
								<NormalBkgID>GXZB.Caption.BtnClose.Normal</NormalBkgID>
								<DownBkgID>GXZB.Caption.BtnClose.Down</DownBkgID>
								<HoverBkgID>GXZB.Caption.BtnClose.Hover</HoverBkgID>
								<DisableBkgID>GXZB.Caption.BtnClose.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="BindWeiXin2WeiMaWnd.xml.lua" func="OnCloseDialog" />
							</eventlist>	
						</obj>
						<obj id = "BindWeiXin2WeiMaWnd.Caption.Tip" class = "TextObject">
							<attr>
								<left>15</left>
								<top>5+25+10</top>
								<width>father.width-2*15</width>
								<height>25*2</height>
								<valign>left</valign>
								<halign>center</halign>
								<textcolor>system.black</textcolor>
								<font>font.text19</font>
								<multiline>1</multiline>
								<text>请扫描以下二维码进行微信绑定，二维码剩余有效期</text>
							</attr>
						</obj>
						<obj id="BindWeiXin2WeiMaWnd.Caption.Wait" class="TextObject">
							<attr>
								<left>(father.width-160)/2</left>
								<top>5+25+10+25*2+15+40</top>
								<width>160</width>
								<height>25</height>
								<valign>center</valign>
								<halign>left</halign>
								<textcolor>system.black</textcolor>
								<font>font.text18</font>
								<text>获取二维码图片中</text>
								<visible>1</visible>
							</attr>
						</obj>
						<obj id="BindWeiXin2WeiMaWnd.Caption.2WeiMa" class="ImageObject">
							<attr>
								<left>(father.width-9*2-250)/2+9</left>
								<top>5+25+10+25*2+15</top>
								<valign>center</valign>
								<halign>center</halign>
								<zorder>99</zorder>
								<drawmode>1</drawmode>
								<antialias>2</antialias>
								<width>250</width>
								<height>250</height>
								<visible>0</visible>
							</attr>
						</obj>
					</children>
				</obj>
			</children>
		</obj>
	</objtreetemplate>

    <hostwndtemplate id="GXZB.BindWeiXin2WeiMaWnd" class="ModalHostWnd">
        <attr>
            <layered>1</layered>
            <left>0</left>
            <top>0</top>
            <width>419</width>
            <height>376</height>
            
            <topmost>0</topmost>
            <visible>1</visible>
            <enable>1</enable>
            <maxbox>0</maxbox>
            <minbox>1</minbox>
            <minwidth>50</minwidth>
            <minheight>50</minheight>
			<sysmenu>0</sysmenu>
			<appwindow>1</appwindow>
            <fps>30</fps>
			<blur>1</blur>
        </attr>
		 <eventlist>
			 <event name="OnCreate" file="BindWeiXin2WeiMaWnd.xml.lua" func="OnCreate"/>
			 <event name="OnDestroy" file="BindWeiXin2WeiMaWnd.xml.lua" func="OnDestroy"/>
        </eventlist>
    </hostwndtemplate>
</xlue>
