<xlue>
	<control class="XuanFuCtrl">
		<objtemplate>
			<children>
				<obj id="bkg" class="LayoutObject">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>father.height</height>
					</attr>
					<children>
						<obj id="strip" class="TextureObject">
							<attr>
								<left>father.width</left>
								<top>8</top>
								<width>0</width>
								<height>father.height-15</height>
								<texture>xuanfu-strip</texture>
							</attr>
						</obj>	
						<obj id="ball" class="TextureObject">
							<attr>
								<left>175</left>
								<top>0</top>
								<width>75</width>
								<height>75</height>
								<texture>xuanfu-bkg</texture>
							</attr>
							<children>
								<obj id="XuanFuNewWnd.ShowSpeed" class="TextObject">
									<attr>
										<left>0</left>
										<top>40</top>
										<width>father.width</width>
										<height>father.height-40</height>
										<valign>center</valign>
										<halign>center</halign>
										<textcolor>DDDDDD</textcolor>
										<font>font.text12</font>
										<text>0H/S</text>
									</attr>
								</obj>
							</children>
						</obj>	
					</children>
				</obj>
			</children>
			<eventlist>
				<event name="OnLButtonDown" file="XuanFuNewWnd.xml.lua" func="OnLButtonDown" />
				<event name="OnLButtonUp" file="XuanFuNewWnd.xml.lua" func="OnLButtonUp" />
				<event name="OnMouseMove" file="XuanFuNewWnd.xml.lua" func="OnMouseMove" />
				<event name="OnMouseLeave" file="XuanFuNewWnd.xml.lua" func="OnMouseLeave" />
				<event name="OnLButtonDbClick" file="XuanFuNewWnd.xml.lua" func="OnLButtonDbClickXuanFu" />
				<!--event name="OnMouseHover" file="XuanFuNewWnd.xml.lua" func="OnMouseHover" /-->
				<event name="OnRButtonUp" file="XuanFuNewWnd.xml.lua" func="OnRButtonUpXuanFu" />
			</eventlist>
		</objtemplate>
	</control>
	
	<objtreetemplate id="GXZB.XuanFuNewWndTree" class="ObjectTreeTemplate">
		<obj id="root" class="XuanFuCtrl">
			<attr>
				<left>0</left>
				<top>0</top>
				<width>250</width>
				<height>75</height>
			</attr>	
		</obj>
	</objtreetemplate>

    <hostwndtemplate id="GXZB.XuanFuNewWnd" class="FrameHostWnd">
        <attr>
            <layered>1</layered>
            <left>0</left>
            <top>0</top>
            <width>250</width>
            <height>75</height>
            
            <topmost>1</topmost>
            <visible>1</visible>
            <enable>1</enable>
            <maxbox>0</maxbox>
            <minbox>1</minbox>
            <minwidth>50</minwidth>
            <minheight>50</minheight>
			<sysmenu>0</sysmenu>
			<appwindow>0</appwindow>
            <fps>30</fps>
			<blur>1</blur>
        </attr>
		 <eventlist>
             <event name="OnCreate" file="XuanFuNewWnd.xml.lua" func="OnCreate"/>
        </eventlist>
    </hostwndtemplate>
</xlue>
