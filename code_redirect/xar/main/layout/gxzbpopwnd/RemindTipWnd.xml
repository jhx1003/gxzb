<xlue>
	<objtreetemplate id="GXZB.RemindTipWndTree" class="ObjectTreeTemplate">
		<attr>
			<left>0</left>
			<top>0</top>
			<width>520</width>
			<height>298</height>
		</attr>
		<obj id="root" class="TextureObject">
			<attr>
				<left>0</left>
				<top>0</top>
				<width>520</width>
				<height>298</height>
				<texture>msgbox.bkg</texture>
			</attr>	
			<children>
				<obj id="RemindTipWnd.Caption" class="CaptionObject">
					<attr>
						<left>9</left>
						<top>9</top>
						<width>father.width-18</width>
						<height>father.height-18</height>
					</attr>
					<children>
						<obj id="RemindTipWnd.Caption.CloseBtn" class="TipAddin.Button">
							<attr>
								<left>father.width-27</left>
								<top>10</top>
								<width>15</width>
								<height>15</height>
								<NormalBkgID>GXZB.Caption.BtnClose.Normal</NormalBkgID>
								<DownBkgID>GXZB.Caption.BtnClose.Down</DownBkgID>
								<HoverBkgID>GXZB.Caption.BtnClose.Hover</HoverBkgID>
								<DisableBkgID>GXZB.Caption.BtnClose.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="RemindTipWnd.xml.lua" func="OnClickClose" />
								<event name="OnMouseEnter">
									local self = ...
									local hoverimage = self:GetObject("hoverimage")
									if not hoverimage then
										local objFactory = XLGetObject("Xunlei.UIEngine.ObjectFactory")
										hoverimage = objFactory:CreateUIObject("hoverimage", "ImageObject")
										self:AddChild(hoverimage)
										hoverimage:SetObjPos(-5, -9, 20, -6)
										hoverimage:SetResID("GXZB.Title.Hoverimage")
									end
									hoverimage:SetVisible(true)
								</event>
								<event name="OnMouseLeave">
									local self = ...
									local hoverimage = self:GetObject("hoverimage")
									if hoverimage then
										hoverimage:SetVisible(false)
									end
								</event>
							</eventlist>	
						</obj>
						<obj id="AboutWnd.Logo" class="ImageObject">
							<attr>
								<left>12</left>
								<top>11</top>
								<width>14</width>
								<height>13</height>
								<image>GXZB.Caption.Logo</image>
							</attr>
						</obj>
						<obj id="RemindTipWnd.Title" class="TextObject">
							<attr>
								<left>32</left>
								<top>8</top>
								<width>100</width>
								<height>20</height>
								<valign>top</valign>
								<halign>left</halign>
								<textcolor>6D5539</textcolor>
								<font>font.text13</font>
								<text>元宝收益提醒</text>
							</attr>
						</obj>
						<obj id="RemindTipWnd.Icon" class="ImageObject">
							<attr>
								<left>54</left>
								<top>92</top>
								<width>80</width>
								<height>80</height>
								<image>logo-mid</image>
							</attr>
						</obj>
						<obj id="RemindTipWnd.Content.Income" class="TextObject">
							<attr>
								<left>160</left>
								<top>92+10</top>
								<width>310</width>
								<height>20</height>
								<valign>top</valign>
								<halign>left</halign>
								<textcolor>6D5539</textcolor>
								<font>font.text16</font>
								<endellipsis>1</endellipsis>
								<text>哎呦，不错哦！又赚取了0个元宝。</text>
							</attr>
						</obj>
						<obj id="RemindTipWnd.Content.Desc" class="TextObject">
							<attr>
								<left>160</left>
								<top>92+10+20</top>
								<width>310</width>
								<height>20</height>
								<multiline>1</multiline>
								<valign>top</valign>
								<halign>left</halign>
								<textcolor>6D5539</textcolor>
								<font>font.text16</font>
								<text>心情美美哒~</text>
							</attr>
						</obj>
						<obj id="RemindTipWnd.Bind" class="LayoutObject">
							<attr>
								<left>160</left>
								<top>92+10+20+20</top>
								<width>310</width>
								<height>20</height>
							</attr>
							<children>
								<obj id="RemindTipWnd.Bind.Desc" class="TextObject">
									<attr>
										<left>0</left>
										<top>0</top>
										<width>188</width>
										<height>20</height>
										<valign>center</valign>
										<halign>left</halign>
										<textcolor>6D5539</textcolor>
										<font>font.text16</font>
										<text>收益通过微信红包提现哦，</text>
									</attr>
								</obj>
								<obj id="RemindTipWnd.Bind.Link" class="TextLinkEx">
									<attr>
										<left>188</left>
										<top>0</top>
										<width>100</width>
										<height>20</height>
										<HAlign>center</HAlign>
										<VAlign>center</VAlign>
										<Text>立即绑定微信</Text>
										<Font>font.text16</Font>
										<TextColor>317FFF</TextColor>
										<TextHoverColor>317FFF</TextHoverColor>
										<Underline>false</Underline>
									</attr>
									<eventlist>
										<event name="OnClick" file="RemindTipWnd.xml.lua" func="OnClickBind" />
									</eventlist>
								</obj>
								<obj id="RemindTipWnd.Bind.End" class="TextObject">
									<attr>
										<left>188+100</left>
										<top>0</top>
										<width>10</width>
										<height>20</height>
										<valign>center</valign>
										<halign>left</halign>
										<textcolor>6D5539</textcolor>
										<font>font.text16</font>
										<text>。</text>
									</attr>
								</obj>
							</children>
						</obj>
						<obj id="RemindTipWnd.CheckAutoRun" class="CheckBox">
							<attr>
								<left>54</left>
								<top>220</top>
								<width>150</width>
								<height>25</height>
								<ImgWidth>13</ImgWidth>
								<ImgHeight>13</ImgHeight>
								<CheckNormal>setting_checkbox.check</CheckNormal>
								<CheckHover>setting_checkbox.check</CheckHover>
								<UnCheckNormal>setting_checkbox.normal</UnCheckNormal>
								<UnCheckHover>setting_checkbox.hover</UnCheckHover>
								<Select>true</Select>
								<Text>开机启动赚宝</Text>
							</attr>
							<eventlist>
								<event name="OnSelect" file="RemindTipWnd.xml.lua" func="OnSelectAutoRun" />
							</eventlist>
						</obj>
					</children>
				</obj>
			</children>
		</obj>
	</objtreetemplate>

    <hostwndtemplate id="GXZB.RemindTipWnd" class="FrameHostWnd">
        <attr>
            <layered>1</layered>
            <left>0</left>
            <top>0</top>
            <width>520</width>
			<height>298</height>
            
            <topmost>0</topmost>
            <visible>1</visible>
            <enable>1</enable>
            <maxbox>0</maxbox>
            <minbox>1</minbox>
            <minwidth>50</minwidth>
            <minheight>50</minheight>
			<sysmenu>0</sysmenu>
			<appwindow>0</appwindow>
            <fps>30</fps>
			<blur>1</blur>
        </attr>
		 <eventlist>
			<event name="OnShowWindow" file="RemindTipWnd.xml.lua" func="OnShowWindow" />
        </eventlist>
    </hostwndtemplate>
</xlue>
